<Page x:Class="Cliente.Views.CombatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="clr-namespace:Cliente.Views"
      Title="CombatPage">

    <Page.Resources>
        <Color x:Key="AccentColor">#E0625E</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <DropShadowEffect x:Key="CardShadow"
                          Color="#44000000"
                          BlurRadius="18"
                          ShadowDepth="4"/>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Fondo gradiente -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F7F9FB" Offset="0"/>
                <GradientStop Color="#EEF2F5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decoracin elipse -->
        <Ellipse Width="580"
                 Height="580"
                 Fill="#20E0625E"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,-180,-180,0"/>

        <!-- Card central -->
        <Border Width="1300"
                Height="760"
                Padding="36"
                CornerRadius="16"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="240" />
                </Grid.ColumnDefinitions>

                <!-- Combate -->
                <views:BorrokaGelaView x:Name="BattleView"
                                       Grid.Column="0"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center"
                                       Height="660"/>

                <!-- Panel derecho: nombres y log -->
                <Grid Grid.Column="1" Margin="12,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="PlayersVsText"
                               Grid.Row="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"
                               Text="Jugador1 vs Jugador2"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,18"/>

                    <!-- CAMBIO: ahora el cuadro ocupa casi todo el alto disponible -->
                    <Border Grid.Row="1"
                            Background="#FAFAFA"
                            BorderBrush="#E8E8E8"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Stretch"
                            Width="180"
                            Margin="0,0,0,12"
                            Effect="{StaticResource CardShadow}">
                        <TextBox x:Name="BattleLogTextBox"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Botn Rendirse abajo a la derecha -->
        <Button Content="Abandonatu"
                Style="{StaticResource PrimaryButton}"
                Width="160"
                Height="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,344,105"
                Click="SurrenderButton_Click"/>
    </Grid>
</Page>

