<Window x:Class="Cliente.Views.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Estatistikak"
        Width="800"
        Height="520"
        WindowStartupLocation="CenterOwner">

    <!-- ========== BALIABIDEAK (Login-etik kopiatuta) ========== -->
    <Window.Resources>
        <!-- KOLOREAK -->
        <Color x:Key="AccentColor">#E0625E</Color>
        <Color x:Key="AccentDark">#C44F4B</Color>

        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#8A8A8A"/>

        <!-- ITZALA -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="#44000000"
                          BlurRadius="18"
                          ShadowDepth="4"/>

        <!-- BOTOI ESTILOA (Login bezalakoa) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ================= UI (antzeko diseinua Login-ari) ================= -->
    <Grid>

        <!-- Atzeko plano gradientea (Login-en berdina) -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F7F9FB" Offset="0"/>
                <GradientStop Color="#EEF2F5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Dekorazio zirkulua -->
        <Ellipse Width="580"
                 Height="580"
                 Fill="#20E0625E"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,-180,-180,0"/>

        <!-- KARTA NAGUSIA -->
        <Border Width="720"
                Padding="28"
                CornerRadius="16"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- GOIBURUA: solo tÃ­tulo -->
                <DockPanel Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="Historia eta estatistikak"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="Black"
                               DockPanel.Dock="Left"/>
                </DockPanel>

                <TextBlock Grid.Row="0"
                           Margin="0,28,0,8"
                           Text="Partida orokorrak eta jokalariaren portaera ikusi."
                           Foreground="{StaticResource MutedBrush}"
                           FontSize="13"/>

                <!-- EDUKIA: bi zutabe, globala + jokalaria -->
                <Grid Grid.Row="1" Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- GLOBALA -->
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Globala"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Foreground="{StaticResource MutedBrush}"/>

                        <GroupBox Header="10 jokalari onenak" Margin="0,0,0,8">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               Foreground="{StaticResource AccentBrush}"
                                               FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <!-- IZENA mantentzen da: Top10ListBox -->
                            <ListBox x:Name="Top10ListBox"
                                     BorderThickness="0"
                                     Foreground="{StaticResource MutedBrush}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   Margin="2,1"
                                                   FontSize="13"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>

                        <GroupBox Header="Munduan gehien erabilitako Pokemona">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               Foreground="{StaticResource AccentBrush}"
                                               FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <!-- IZENA mantentzen da: GlobalMostUsedPokemonText -->
                            <TextBlock x:Name="GlobalMostUsedPokemonText"
                                       FontSize="14"
                                       Margin="4"
                                       Foreground="{StaticResource MutedBrush}"/>
                        </GroupBox>
                    </StackPanel>

                    <!-- JOKALARIA -->
                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="Jokalaria"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Foreground="{StaticResource MutedBrush}"/>

                        <GroupBox Header="Jokalariaren laburmena">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"
                                               Foreground="{StaticResource AccentBrush}"
                                               FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <StackPanel Margin="6">
                                <!-- IZENAK mantentzen dira: logika ez ukitzeko -->
                                <TextBlock x:Name="PlayerMostUsedPokemonText"
                                           Margin="0,0,0,6"
                                           Foreground="{StaticResource MutedBrush}"
                                           FontSize="14"/>

                                <TextBlock x:Name="PlayerWinPctText"
                                           Margin="0,0,0,2"
                                           Foreground="{StaticResource MutedBrush}"
                                           FontSize="13"/>

                                <TextBlock x:Name="PlayerLossPctText"
                                           Margin="0,0,0,2"
                                           Foreground="{StaticResource MutedBrush}"
                                           FontSize="13"/>

                                <TextBlock x:Name="PlayerSurrenderPctText"
                                           Margin="0,0,0,2"
                                           Foreground="{StaticResource MutedBrush}"
                                           FontSize="13"/>

                                <TextBlock x:Name="PlayerAvgAliveText"
                                           Margin="0,0,0,2"
                                           Foreground="{StaticResource MutedBrush}"
                                           FontSize="13"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>

                <!-- BOTONES ABAJO A LA DERECHA -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,8,0,0">
                    <Button Content="Inprimatu PDF"
                            Width="130"
                            Height="38"
                            Margin="0,0,8,0"
                            Click="BtnPrintPdf_Click"
                            Style="{StaticResource PrimaryButton}"/>

                    <Button Content="Itxi"
                            Width="110"
                            Height="38"
                            Click="BtnClose_Click"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
