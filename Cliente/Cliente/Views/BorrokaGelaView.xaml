<UserControl x:Class="Cliente.Views.BorrokaGelaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Background>
        <ImageBrush ImageSource="/Images/combate1.jpg"
                    Stretch="UniformToFill" />
    </UserControl.Background>

    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentGreen" Color="#19B763"/>

        <!-- background turns red if HP == 0 -->
        <Style x:Key="FaintableSpriteBorder" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding HP}" Value="0">
                    <Setter Property="Background" Value="#55FF0000"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconSquare" TargetType="Border">
            <Setter Property="Width" Value="56" />
            <Setter Property="Height" Value="56" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="Margin" Value="6" />
        </Style>

        <Style x:Key="RoundedMove" TargetType="Button">
            <Setter Property="Padding" Value="8,10" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Background" Value="#E0E0E0" /> <!-- Cambiado a gris claro -->
            <Setter Property="BorderBrush" Value="#D0D0D0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="Black" /> <!-- Contraste adecuado -->
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="64"/>
        </Grid.ColumnDefinitions>

        <!-- Left vertical icons (your team) -->
        <ItemsControl Grid.Column="0"
                      ItemsSource="{Binding PlayerTeam, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource IconSquare}">
                        <Image Source="{Binding Thumbnail}"
                               Stretch="UniformToFill"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Main battle area -->
        <Grid Grid.Column="1" Margin="18,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- Opponent row -->
            <Grid Grid.Row="0">
                <TextBlock Text="{Binding RivalSelectedPokemon.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontWeight="SemiBold" FontSize="16"
                           VerticalAlignment="Top" HorizontalAlignment="Left"
                           Margin="229,4,0,0"/>

                <!-- Rival HP bar -->
                <Border Width="160" Height="10" Background="#EEE" CornerRadius="6"
                        VerticalAlignment="Top" HorizontalAlignment="Left"
                        Margin="229,40,0,0">
                    <ProgressBar Value="{Binding RivalSelectedPokemon.HP, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Maximum="{Binding RivalSelectedPokemon.MaxHP, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Foreground="{StaticResource AccentGreen}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Height="10"/>
                </Border>

                <!-- NEW: Rival HP numbers -->
                <TextBlock FontSize="12"
                           Foreground="Black"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="229,54,0,0">
                    <Run Text="{Binding RivalSelectedPokemon.HP, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Run Text=" / " />
                    <Run Text="{Binding RivalSelectedPokemon.MaxHP, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </TextBlock>

                <!-- apply faint background -->
                <Border Width="300" Height="270"
                        Style="{StaticResource FaintableSpriteBorder}"
                        DataContext="{Binding RivalSelectedPokemon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Margin="500,0,0,0">
                    <Viewbox Stretch="Uniform">
                        <Image Source="{Binding Thumbnail}"
                               Stretch="Uniform"/>
                    </Viewbox>
                </Border>
            </Grid>

            <!-- Player + moves row -->
            <Grid Grid.Row="1" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="48.118"/>
                    <ColumnDefinition Width="371.882"/>
                </Grid.ColumnDefinitions>

                <!-- apply faint background -->
                <Border Grid.Column="0"
                        Width="320" Height="240"
                        Style="{StaticResource FaintableSpriteBorder}"
                        DataContext="{Binding SelectedPokemon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Background="Transparent"
                        Margin="40,83,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    <Viewbox Stretch="Uniform">
                        <Image Source="{Binding Thumbnail}"
                               Stretch="Uniform"/>
                    </Viewbox>
                </Border>

                <!-- Player HP bar -->
                <Border Width="160" Height="10" Background="#EEE" CornerRadius="6"
                        VerticalAlignment="Top" HorizontalAlignment="Left"
                        Margin="381,49,0,0" Grid.ColumnSpan="3">
                    <ProgressBar Value="{Binding SelectedPokemon.HP, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Maximum="{Binding SelectedPokemon.MaxHP, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 Foreground="{StaticResource AccentGreen}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Height="10"/>
                </Border>

                <!-- NEW: Player HP numbers -->
                <TextBlock FontSize="12"
                           Foreground="Black"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="381,63,0,0"
                           Grid.ColumnSpan="3">
                    <Run Text="{Binding SelectedPokemon.HP, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Run Text=" / " />
                    <Run Text="{Binding SelectedPokemon.MaxHP, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </TextBlock>

                <Border Grid.Column="1" Background="#B0B0B0" BorderBrush="#E8E8E8"
                        BorderThickness="1" CornerRadius="12" Padding="14"
                        VerticalAlignment="Top" Height="186" Margin="0,83,0,0"
                        Grid.ColumnSpan="2">
                    <UniformGrid Columns="2" Rows="2" Margin="0">
                        <Button Style="{StaticResource RoundedMove}"
                                IsEnabled="{Binding AreMovesEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Content="{Binding SelectedPokemon.Move1, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Click="Move1_Click"/>
                        <Button Style="{StaticResource RoundedMove}"
                                IsEnabled="{Binding AreMovesEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Content="{Binding SelectedPokemon.Move2, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Click="Move2_Click"/>
                        <Button Style="{StaticResource RoundedMove}"
                                IsEnabled="{Binding AreMovesEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Content="{Binding SelectedPokemon.Move3, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Click="Move3_Click"/>
                        <Button Style="{StaticResource RoundedMove}"
                                IsEnabled="{Binding AreMovesEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Content="{Binding SelectedPokemon.Move4, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                Click="Move4_Click"/>
                    </UniformGrid>
                </Border>

                <TextBlock Text="{Binding SelectedPokemon.Name, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontWeight="SemiBold" FontSize="14"
                           Grid.Column="2" Margin="136,49,0,205"/>
            </Grid>
        </Grid>

        <!-- Right vertical icons (rival team) -->
        <ItemsControl Grid.Column="2"
                      ItemsSource="{Binding RivalTeam, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource IconSquare}">
                        <Image Source="{Binding Thumbnail}"
                               Stretch="UniformToFill"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>