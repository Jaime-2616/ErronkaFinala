<Page x:Class="Cliente.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Registro">

    <!-- ================= RESOURCES ================= -->
    <Page.Resources>

        <!-- COLORS -->
        <Color x:Key="AccentColor">#E0625E</Color>
        <Color x:Key="AccentDark">#C44F4B</Color>

        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#8A8A8A"/>

        <!-- SHADOW -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="#44000000"
                          BlurRadius="18"
                          ShadowDepth="4"/>

        <!-- TEXTBOX STYLE -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PASSWORD STYLE -->
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- BUTTON STYLE -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- ================= UI ================= -->
    <Grid>

        <!-- BACKGROUND -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F7F9FB" Offset="0"/>
                <GradientStop Color="#EEF2F5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- DECORATION -->
        <Ellipse Width="580"
                 Height="580"
                 Fill="#20E0625E"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,-180,-180,0"/>

        <!-- CARD -->
        <Border Width="420"
                Padding="36"
                CornerRadius="16"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource CardShadow}">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <Image Source="pack://application:,,,/Cliente;component/Images/logo.png"
                           Width="140"
                           Height="140"
                           HorizontalAlignment="Center"/>

                    <TextBlock Text="Sortu kontu berria"
                               FontSize="26"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,20"/>

                    <!-- NAME -->
                    <TextBlock Text="Izena"
                               FontSize="14"
                               Foreground="{StaticResource MutedBrush}"
                               Margin="6,0,0,8"/>
                    <TextBox x:Name="txtName"
                             Style="{StaticResource RoundedTextBox}"/>

                    <!-- PASSWORD -->
                    <TextBlock Text="Pasahitza"
                               FontSize="14"
                               Foreground="{StaticResource MutedBrush}"
                               Margin="6,16,0,8"/>
                    <PasswordBox x:Name="txtPassword"
                                 Style="{StaticResource RoundedPasswordBox}"/>

                    <!-- CONFIRM PASSWORD -->
                    <TextBlock Text="Pasahitza (berretsi)"
                               FontSize="14"
                               Foreground="{StaticResource MutedBrush}"
                               Margin="6,16,0,8"/>
                    <PasswordBox x:Name="txtPasswordConfirm"
                                 Style="{StaticResource RoundedPasswordBox}"/>

                    <!-- BUTTON -->
                    <Button Content="Erregistratu"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,28,0,0"
                            Click="BtnRegister_Click"/>

                    <!-- LOGIN LINK -->
                    <StackPanel HorizontalAlignment="Center"
                                Margin="0,18,0,0">
                        <TextBlock Text="Dagoeneko kontua baduzu?"
                                   Foreground="{StaticResource MutedBrush}"
                                   FontSize="14"/>
                        <Button Content="Saioa hasi"
                                Width="140"
                                Height="40"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,8,0,0"
                                Click="BtnGoLogin_Click"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
