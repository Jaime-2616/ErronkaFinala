<Window x:Class="Cliente.Views.MovePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar movimiento"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <!-- ====== COLORES Y RECURSOS DEL LOGIN ====== -->
    <Window.Resources>
        <Color x:Key="AccentColor">#E0625E</Color>
        <Color x:Key="AccentDark">#C44F4B</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="MutedBrush" Color="#8A8A8A"/>
        <DropShadowEffect x:Key="CardShadow"
                          Color="#44000000"
                          BlurRadius="18"
                          ShadowDepth="4"/>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F7F9FB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Buscador -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBox x:Name="TxtSearch" Width="250" Margin="0,0,8,0"
                     VerticalContentAlignment="Center"
                     Style="{StaticResource RoundedTextBox}"
                     ToolTip="Buscar movimiento..."/>
            <Button Content="Bilatu" Width="90" Style="{StaticResource PrimaryButton}" Click="BtnSearch_Click"/>
        </StackPanel>

        <!-- Lista de movimientos -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" BorderBrush="#E6E6E6" BorderThickness="1" Effect="{StaticResource CardShadow}">
            <ListBox x:Name="ListMoves"
                     Margin="8"
                     DisplayMemberPath="Nombre"
                     MouseDoubleClick="ListMoves_MouseDoubleClick"
                     FontSize="15"
                     BorderThickness="0"
                     Background="Transparent"/>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Onartu" Width="110" Style="{StaticResource PrimaryButton}" Click="BtnOk_Click"/>
            <Button Content="Utzi" Width="110" Style="{StaticResource PrimaryButton}"  Click="BtnCancel_Click" Margin="0"/>
        </StackPanel>
    </Grid>
</Window>